<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="AppThemeBase" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorAccent">@color/accent</item>
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primaryDark</item>
        <item name="android:textCursorDrawable">@drawable/cursor</item>
        <item name="android:windowBackground">@color/primary</item>
        <item name="android:textColor">@color/accent</item>
        <item name="vpiCirclePageIndicatorStyle">@style/AppTheme.CircleIndicator</item>
        <item name="edgeeffect_color">#99008476</item>
    </style>

    <style name="AppTheme" parent="AppThemeBase">
        <item name="android:selectableItemBackground">@drawable/btn_background</item>
    </style>

    <style name="AppTheme.CircleIndicator">
        <item name="pageColor">@color/primaryDark</item>
        <item name="fillColor">@android:color/white</item>
        <item name="strokeColor">@android:color/transparent</item>
        <item name="radius">4dp</item>
    </style>

</resources>
