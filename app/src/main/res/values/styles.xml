<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="AppThemeBase" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorAccent">@color/accent</item>
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primaryDark</item>
        <item name="android:textCursorDrawable">@drawable/cursor</item>
        <item name="android:windowBackground">@color/primary</item>
        <item name="android:textColor">@color/accent</item>
        <item name="vpiCirclePageIndicatorStyle">@style/AppTheme.CircleIndicator</item>
        <item name="edgeeffect_color">#99008476</item>
    </style>

    <style name="AppTheme" parent="AppThemeBase"/>

    <style name="AppTheme.Header">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginBottom">72dp</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:textSize">36sp</item>
        <item name="typeface">roboto_slab_bold</item>
    </style>

    <style name="AppTheme.InputField">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginBottom">72dp</item>
        <item name="android:inputType">textCapSentences</item>
        <item name="android:maxLength">70</item>
        <item name="android:maxLines">3</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="typeface">roboto_slab_regular</item>
    </style>

    <style name="AppTheme.NextButton">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">end</item>
        <item name="android:background">?android:attr/selectableItemBackground</item>
        <item name="android:theme">@style/Theme.AppCompat</item>
        <item name="android:text">@string/btn_next</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/accent</item>
        <item name="typeface">roboto_slab_bold</item>
    </style>

    <style name="AppTheme.CircleIndicator">
        <item name="pageColor">@color/primaryDark</item>
        <item name="fillColor">@android:color/white</item>
        <item name="strokeColor">@android:color/transparent</item>
        <item name="radius">4dp</item>
    </style>

</resources>
